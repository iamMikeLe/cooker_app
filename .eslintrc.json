{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "airbnb",
        "airbnb/hooks",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
        "import/resolver": {
            "node": {
            "paths": ["src"]
            }
        }
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }],
        "react/prefer-stateless-function": [1],
        "prefer-destructuring": ["error", {
            "object": false,
            "array": false
        }],
        "max-len": [2, {
            "code": 120,
            "tabWidth": 2,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
        }],
        "quotes": 0,
        "object-curly-newline": 0,
        "arrow-body-style": 0,
        "import/prefer-default-export": 0,
        "import/no-named-as-default": 0
    }
}